<div class="container noticia"> 
  <p style="color: green "><%= notice %></p>

  <div class="card formato-ingreso container" style="width: 18rem;">
    <div class="card-body">
      <%= form_with(model: news) do |form| %>
        <% if news.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

            <ul>
              <% news.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :image, style: "display: block", class:"field2" %>
          <%= form.text_field :image %>
        </div>

        <div>
          <%= form.label :title, style: "display: block", class:"field2" %>
          <%= form.text_field :title %>
        </div>

        <div>
          <%= form.label :description, style: "display: block", class:"field2" %>
          <%= form.text_area :description, class:"descripcion"%>
        </div>

        <div class="boton-enviar">
          <%= form.submit "Enviar" %>
        </div>
      <% end %>
    </div>
  </div>


  <%= link_to "New news", new_news_path %>
</div>
